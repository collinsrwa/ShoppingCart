@model int
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{ 
    var ParentControllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}
<td style="width:150px">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="@ParentControllerName" class="btn btn-primary" asp-route-id="@Model"><i class="fa fa-edit"></i></a>
        <a asp-action="Details" asp-controller="@ParentControllerName" class="btn btn-success" asp-route-id="@Model"><i class="fa fa-list"></i></a>
        <a asp-action="Delete" asp-controller="@ParentControllerName" class="btn btn-danger" asp-route-id="@Model"><i class="fa fa-trash"></i></a>
    </div>
</td>