@using SharedModels.Models;
@model IEnumerable<Product>;
@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; <i class="fa fa-plus"></i> &nbsp; Add Product</a>
    </div>
</div>
<br />
<div class="row">
        <table class="table table-striped border" id="tProducts">
            <thead>
                <tr class="table-info">
                    <th>
                        @Html.DisplayNameFor(c => c.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(c => c.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(c => c.ProductColor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(c => c.IsAvailable)
                    </th>
                    <th>
                        @Html.DisplayNameFor(c => c.ProductTypeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(c => c.Quantity)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductColor</td>
                    <td>@item.IsAvailable</td>
                    <td>@item.productType.ProdType</td>
                    <td>@item.Quantity</td>
                    <td>
                        <partial name="_ButtonPartial" model="item.Id" />
                    </td>
                </tr>

                }
            </tbody>
        </table>
    </div>
    @section scripts{
        <script src="~/lib/AlertifyJS/alertify.min.js"></script>
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/datatables/js/dataTables.buttons.min.js"></script>
        <script type="text/javascript">
        $(document).ready(function () {
            $('#tProducts').DataTable();
        });
            //$(document).ready(function () {
            //    $('#tProducts').DataTable({
            //        dom: 'Bfrtip',
            //        buttons: [
            //            'copy', 'csv', 'excel', 'pdf', 'print'
            //        ]
            //    });
            //});
        $(function() {
            var save = '@TempData["save"]';
            if (save != null) {
                alertify.success(save);
            }
        })
        </script>
    }
<style>
    .dataTables_wrapper {
        position:relative;
         clear: both; 
         zoom: 1; 
        width: 98.5%;
        padding-left: 18px;
    }
</style>
