@model SharedModels.Models.ProductType
@{
    ViewData["Title"] = "Details";
}
<br />
<h2 class="text-info">Create Product Type</h2>
<form asp-action="Details" method="get">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProdType"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProdType" class="form-control" readonly />
            </div>
            <span asp-validation-for="ProdType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>

    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial"); }
}
